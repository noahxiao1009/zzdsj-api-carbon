# 知识图谱微服务环境配置

# 服务基本配置
SERVICE_NAME=knowledge-graph-service
HOST=0.0.0.0
PORT=8087
DEBUG=true
LOG_LEVEL=INFO

# ArangoDB配置
ARANGODB_URL=http://localhost:8529
ARANGODB_USERNAME=root
ARANGODB_PASSWORD=password
ARANGODB_DATABASE=knowledge_graph
ARANGODB_DATABASE_PREFIX=kg_

# 图数据库配置
GRAPH_DATABASE_TENANT_MODE=true
GRAPH_DATABASE_MAX_CONNECTIONS=50

# 租户配置
GRAPH_TENANT_USERS_PER_SHARD=1000
GRAPH_TENANT_MAX_CACHED_DBS=100

# 认证配置
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# CORS配置
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# 网关注册配置
GATEWAY_URL=http://localhost:8080
REGISTER_WITH_GATEWAY=true